{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.nirholas/github-to-mcp",
  "title": "GitHub to MCP",
  "description": "Convert any GitHub repo to MCP server - automatic tool generation, API wrap",
  "license": "MIT",
  "authors": [
    {
      "name": "nich",
      "url": "https://github.com/nirholas"
    }
  ],
  "repository": {
    "url": "https://github.com/nirholas/github-to-mcp",
    "source": "github"
  },
  "version": "1.0.0",
  "links": {
    "homepage": "https://github.com/nirholas/github-to-mcp",
    "bugs": "https://github.com/nirholas/github-to-mcp/issues",
    "npm": "https://www.npmjs.com/package/github-to-mcp"
  },
  "icons": [
    {
      "url": "https://raw.githubusercontent.com/nirholas/g1t/d9a0ee206b8136472c04384905999369f198b3c9/milady.svg",
      "type": "svg"
    }
  ],
  "packages": [
    {
      "registryType": "npm",
      "identifier": "github-to-mcp",
      "version": "1.0.0",
      "runtimeHint": "npx",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "GITHUB_TOKEN",
          "description": "GitHub token for repo access",
          "required": false,
          "secret": true
        }
      ]
    }
  ],
  "_meta": {
    "io.modelcontextprotocol.registry/publisher-provided": {
      "keywords": ["github", "mcp", "converter", "tools", "api", "automation", "ai"],
      "category": "Developer Tools"
    }
  }
}
