{
  "name": "@nirholas/github-to-mcp",
  "version": "1.0.0",
  "description": "Convert GitHub repositories into MCP servers",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "github-to-mcp": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "github",
    "ai",
    "tools",
    "openapi"
  ],
  "author": "nirholas",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nirholas/github-to-mcp"
  },
  "dependencies": {
    "@github-to-mcp/openapi-parser": "workspace:*",
    "@octokit/rest": "^21.0.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "marked": "^12.0.0",
    "prompts": "^2.4.2",
    "chokidar": "^3.6.0",
    "cli-table3": "^0.6.3",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9"
  }
}
