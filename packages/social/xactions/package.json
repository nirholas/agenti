    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "ora": "^8.0.0",
    "prisma": "^5.7.1",
    "puppeteer": "^24.34.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "redis": "^4.6.11",
    "socket.io": "^4.8.3",
    "stripe": "^14.10.0"
