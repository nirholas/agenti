ENV PORT={{port}}

# Expose port
EXPOSE {{port}}

# Health check
HEALTHCHECK --interval=30s \
  --timeout=10s \
  --start-period=5s \
  --retries=3 \
  CMD python -c "import sys; sys.exit(0)"

# Switch to non-root user
USER mcpserver

# Start the MCP server
CMD ["python", "-m", "mcp_server"]
