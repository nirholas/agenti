{
  "name": "free-crypto-news",
  "version": "1.0.1",
  "description": "Real-time crypto news aggregator with AI analysis, 12+ sources, sentiment tracking, and full market data. Works with Claude, ChatGPT, Discord, Telegram & more.",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:a11y": "eslint src/components/*.tsx src/app/**/*.tsx",
    "lint:css": "stylelint src/**/*.css",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "audit:contrast": "node scripts/contrast-audit.js",
    "audit:a11y": "npx pa11y https://free-crypto-news.vercel.app",
    "audit:unused": "npx knip",
    "pwa:icons": "node scripts/generate-pwa-icons.js",
    "mcp:install": "cd mcp && npm install",
    "mcp:start": "cd mcp && npm start",
    "mcp:http": "cd mcp && npm run start:http",
    "mcp:dev": "cd mcp && npm run dev",
    "i18n:translate": "npx tsx scripts/i18n/translate.ts",
    "i18n:validate": "npx tsx scripts/i18n/validate.ts",
    "i18n:watch": "npx tsx scripts/i18n/watch.ts",
    "archive:collect": "node scripts/archive/collect.js",
    "archive:enhanced": "node scripts/archive/collect-enhanced.js",
    "archive:migrate": "node scripts/archive/migrate.js",
    "archive:stats": "node scripts/archive/stats.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "crypto",
    "news",
    "api",
    "bitcoin",
    "defi",
    "free",
    "rss",
    "aggregator",
    "pwa"
  ],
  "author": "nirholas",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/recharts": "^1.8.29",
    "@vercel/analytics": "^1.6.1",
    "@vercel/kv": "^3.0.0",
    "@vercel/speed-insights": "^1.3.1",
    "@x402/core": "^2.2.0",
    "@x402/evm": "^2.2.0",
    "@x402/next": "^2.2.0",
    "framer-motion": "^12.28.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "next-intl": "^4.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reading-time": "^1.5.0",
    "recharts": "^2.15.4",
    "redis": "^5.10.0",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "stripe": "^20.2.0",
    "swr": "^2.3.8",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.0",
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^16.1.4",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/redis": "^4.0.10",
    "@types/sanitize-html": "^2.13.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.17",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.7",
    "pa11y": "^9.0.1",
    "postcss": "^8.4.31",
    "storybook": "^8.6.14",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
